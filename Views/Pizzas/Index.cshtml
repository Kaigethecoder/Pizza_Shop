@model IEnumerable<Pizza_Shop.Models.Pizza>

@{
    ViewData["Title"] = "Index";
}

<h1>Current Menu:</h1>

<p>
    <a asp-action="Create">Create New Pizza</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <b>Pizza Masterpieces:</b>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
        <tr>
            <td>
               <i>@Html.DisplayFor(modelItem => item.PizzaName)</i>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PizzaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PizzaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PizzaID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
