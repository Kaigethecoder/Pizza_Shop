@model Pizza_Shop.Models.PizzaForm

@{
    ViewData["Title"] = "Create";
}

<h1>New Pizza</h1>

<h4><b>Pick a name and choose your toppings!</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaName" class="control-label">Name your <i>masterpiece</i></label>
                <input asp-for="PizzaName" class="form-control" />
                <span asp-validation-for="PizzaName" class="text-danger"></span>
            </div>
            <div>
                <p><i>Customize your masterpiece</i></p>
            </div>
            @foreach(var topping in Model.AvailableToppings)
            {
                <div class="form-group">
                    <label asp-for="@topping.ToppingName" class="control-label">@topping.ToppingName</label>
                    <input type="checkbox" id="@topping.ToppingID" name="ToppingsSelected" value="@topping.ToppingID"/>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
