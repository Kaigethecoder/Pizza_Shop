@model Pizza_Shop.Models.Topping

@{
    ViewData["Title"] = "Edit";
}

<h1><b>Keep the name similar to avoid confusion.</b></h1>

<h4>@Model.ToppingName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToppingID" />
            <div class="form-group">
                <label asp-for="ToppingName" class="control-label">New Name</label>
                <input asp-for="ToppingName" class="form-control" />
                <span asp-validation-for="ToppingName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
